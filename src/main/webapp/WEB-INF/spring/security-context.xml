<?xml version="1.0" encoding="UTF-8"?>
<!-- 5.0 버전은 에러 발생 -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
		http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<security:http>
		
		<!-- 특정 url 특정 롤 필요 -->
		<security:intercept-url pattern="/member/**" access="hasRole('admin')"/>
		
		<!-- 인증되지 않은 페이지 액세스 시도 시 /login Post 요청 -->
		<security:form-login login-page="/loginAlert"/>
		
		<!-- 허가되지 않은 페이지 액세스 시도 시 / -->
		<security:access-denied-handler error-page="/notPermit" />
		
	</security:http>
	
	<security:authentication-manager>
	
	</security:authentication-manager>
</beans>
